    Private Sub Btn_Calculate_Click(sender As Object, e As EventArgs) Handles btn_Calculate.Click
        listbox1.Items.Clear()
        listbox2.Items.Clear()
        listbox3.Items.Clear()
        Dim price() As String = {"3.00", "4.00", "4.00", "4.50", "5.50", "6.00", "7.00", "3.00", "4.00", "5.00", "5.00", "5.00", "7.00", "9.00"}
        If txtSandwitch.Text > 0 Then
            listbox1.Items.Add("Sandwitch")
            listbox2.Items.Add(txtSandwitch.Text)
            listbox3.Items.Add("RM" & price(0) * txtSandwitch.Text)
        End If
        If txtCranberry_B.Text > 0 Then
            listbox1.Items.Add("Cranberry Bread")
            listbox2.Items.Add(txtCranberry_B.Text)
            listbox3.Items.Add("RM" & price(1) * txtCranberry_B.Text)
        End If
        If txtBlueberry_B.Text > 0 Then
            listbox1.Items.Add("Blueberry Bread")
            listbox2.Items.Add(txtBlueberry_B.Text)
            listbox3.Items.Add("RM" & price(2) * txtBlueberry_B.Text)
        End If
        If txtChocolate_Banana_B.Text > 0 Then
            listbox1.Items.Add("Chocolate Banana Bread")
            listbox2.Items.Add(txtChocolate_Banana_B.Text)
            listbox3.Items.Add("RM" & price(3) * txtChocolate_Banana_B.Text)
        End If
        If txtBourbon_Banana_B.Text > 0 Then
            listbox1.Items.Add("Bourbon Banana Bread")
            listbox2.Items.Add(txtBourbon_Banana_B.Text)
            listbox3.Items.Add("RM" & price(4) * txtBourbon_Banana_B.Text)
        End If
        If txtFrench_Toast.Text > 0 Then
            listbox1.Items.Add("French Toast")
            listbox2.Items.Add(txtFrench_Toast.Text)
            listbox3.Items.Add("RM" & price(5) * txtFrench_Toast.Text)
        End If
        If txtMexicanCoffeeBread.Text > 0 Then
            listbox1.Items.Add("Mexican Coffee Bread")
            listbox2.Items.Add(txtMexicanCoffeeBread.Text)
            listbox3.Items.Add("RM" & price(6) * txtMexicanCoffeeBread.Text)
        End If
        If txtGreen_T.Text > 0 Then
            listbox1.Items.Add("Green Tea")
            listbox2.Items.Add(txtGreen_T.Text)
            listbox3.Items.Add("RM" & price(7) * txtGreen_T.Text)
        End If
        If txtBlack_T.Text > 0 Then
            listbox1.Items.Add("Black Tea")
            listbox2.Items.Add(txtBlack_T.Text)
            listbox3.Items.Add("RM" & price(8) * txtBlack_T.Text)
        End If
        If txtAmericano.Text > 0 Then
            listbox1.Items.Add("Americano")
            listbox2.Items.Add(txtAmericano.Text)
            listbox3.Items.Add("RM" & price(9) * txtAmericano.Text)
        End If
        If txtCappuccino.Text > 0 Then
            listbox1.Items.Add("Cappuccino")
            listbox2.Items.Add(txtCappuccino.Text)
            listbox3.Items.Add("RM" & price(10) * txtCappuccino.Text)
        End If
        If txtMacchiato.Text > 0 Then
            listbox1.Items.Add("Macchiato")
            listbox2.Items.Add(txtMacchiato.Text)
            listbox3.Items.Add("RM" & price(11) * txtMacchiato.Text)
        End If
        If txtEspresso.Text > 0 Then
            listbox1.Items.Add("Espresso")
            listbox2.Items.Add(txtEspresso.Text)
            listbox3.Items.Add("RM" & price(12) * txtEspresso.Text)
        End If
        If txtEspresso_Macchiato.Text > 0 Then
            listbox1.Items.Add("Espresso Macchiato")
            listbox2.Items.Add(txtEspresso_Macchiato.Text)
            listbox3.Items.Add("RM" & price(13) * txtEspresso_Macchiato.Text)
        End If
        Dim i As Integer
        Dim total As Double
        For i = 0 To listbox1.Items.Count - 1
            total += listbox3.Items(i)
        Next
        txtboxSubtotal.Text = "RM" & Format(total, "0.00")
        If total <= 30 Then
            txtboxTaxes.Text = "RM1.08"
            txtboxTotal_Payable_Amount.Text = "RM" & Format(total * 1.08, "0.00")
        ElseIf total >= 31 Then
            txtboxTaxes.Text = "RM1.06"
            txtboxTotal_Payable_Amount.Text = "RM" & Format(total * 1.06, "0.00")
        End If
        btn_Cancel.Enabled = False
        btn_Confirm.Enabled = True
    End Sub
    Private Sub Btn_Confirm_Click(sender As Object, e As EventArgs) Handles btn_Confirm.Click
        PaymentSystem.btnFinal_Confirm.Enabled = False
        PaymentSystem.btnProceed.Enabled = False
        PaymentSystem.txtboxID.Text = txtboxID.Text
        PaymentSystem.txtboxName.Text = txtboxName.Text
        PaymentSystem.txtboxUser.Text = txtboxUser.Text
        PaymentSystem.mtxtboxDate.Text = Date.Now.ToString("dd/MM/yyyy")
        PaymentSystem.mtxtboxTime.Text = Date.Now.ToString("hh:mm:ss tt")
        Dim i As Integer
        PaymentSystem.listbox1.Items.Clear()
        For i = 0 To listbox1.Items.Count - 1 Step 1
            PaymentSystem.listbox1.Items.Add(listbox1.Items.Item(i).ToString)
        Next
        PaymentSystem.listbox2.Items.Clear()
        For i = 0 To listbox2.Items.Count - 1 Step 1
            PaymentSystem.listbox2.Items.Add(listbox2.Items.Item(i).ToString)
        Next
        PaymentSystem.Show()
        Me.Hide()
    End Sub

